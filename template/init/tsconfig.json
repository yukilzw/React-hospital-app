{
    "include": ["./"],
    "exclude": ["node_modules", "src"],
    "compilerOptions": {
        "typeRoots": [
            "node_modules/@types"
        ],
        "types": ["node"],
        "allowSyntheticDefaultImports": true,
        "experimentalDecorators": true,
        "allowJs": false,
        "module": "commonjs",
        "target": "es5",
        "moduleResolution": "node",
        "lib": ["es2015", "es2016", "es2017"],
        "outDir": "./.build",
        "sourceMap": false,
        "pretty": true,
        "strictFunctionTypes": false,
        "importHelpers": true,
        "noImplicitAny": true,
        "downlevelIteration": true
    }
}