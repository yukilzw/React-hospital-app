{
    "include": ["./"],
    "exclude": ["node_modules"],
    "compilerOptions": {
        "typeRoots": [
            "node_modules/@types"
        ],
        "baseUrl": ".",
        "paths": {
            "@common/*": ["./src/common/*"],
            "@route": ["./.build/script/routeImage"]
        },
        "allowSyntheticDefaultImports": true,
        "experimentalDecorators": true,
        "allowJs": true,
        "module": "commonjs",
        "jsx": "react",
        "target": "es5",
        "moduleResolution": "node",
        "lib": ["es2015", "dom"],
        "outDir": "./.build",
        "sourceMap": true,
        "pretty": true,
        "strictFunctionTypes": false,
        "importHelpers": true,
        "noImplicitAny": false,
        "downlevelIteration": true
    }
}