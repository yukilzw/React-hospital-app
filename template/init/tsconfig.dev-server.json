{
    "include": ["./mock", "./script"],
    "exclude": ["node_modules", "src", "babel.config.js"],
    "compilerOptions": {
        "typeRoots": [
            "node_modules/@types"
        ],
        "types": ["node"],
        "allowSyntheticDefaultImports": true,
        "experimentalDecorators": true,
        "allowJs": true,
        "module": "commonjs",
        "target": "es5",
        "moduleResolution": "node",
        "lib": ["es2015"],
        "sourceMap": false,
        "outDir": "./.build",
        "pretty": true,
        "strictFunctionTypes": false,
        "importHelpers": true,
        "noImplicitAny": true,
        "downlevelIteration": true
    }
}