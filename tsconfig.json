{
    "include": ["./*.ts", "./src/*.ts"],
    "exclude": ["node_modules"],
    "compilerOptions": {
        "typeRoots": [
            "node_modules/@types"
        ],
        "types": ["node"],
        "allowSyntheticDefaultImports": true,
        "experimentalDecorators": true,
        "allowJs": true,
        "module": "commonjs",
        "target": "es5",
        "moduleResolution": "node",
        "lib": ["es2015"],
        "sourceMap": true,
        "pretty": true,
        "strictFunctionTypes": false,
        "importHelpers": true,
        "noImplicitAny": true,
        "downlevelIteration": true
    }
}